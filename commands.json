{
  "events": [{
    "interval": 900000,
    "type": "timer",
    "function": "postImage"
  },
  {
    "type": "one-shot",
    "target": "stream",
    "function": "postImage"
  },
  {
    "type": "one-shot",
    "target": "init",
    "function": "updateLocation"
  }],
  "commands": [{
    "pattern": {
      "string": "version",
      "flag": "gi"
    },
    "function": "getVersion",
    "response": "v: {{version}} c: {{commit}}"
  },
  {
    "pattern": {
      "string": "getimage",
      "flag": "gi"
    },
    "function": "getImage",
    "response": "Failed to obtain an image."
  },
  {
    "command": "hello-world",
    "response": "Hello, world!"
  }]
}
